<h1>Seattle Grace Hospital</h1>
<h2>Dr. <%= @doctor.name %> - <%= @doctor.department %></h2>

<h4>Appointments: </h4>
<ul>
  <% @doctor.appointments.each do |appt| %>
  <li>
    <%= link_to appt.patient.name, patient_path(appt.patient) %> - <%= appt.appointment_datetime.strftime("%B %d, %Y at %H:%M") %>
  </li>
  <% end %>
</ul>
