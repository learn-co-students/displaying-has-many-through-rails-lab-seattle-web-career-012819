<h1>Seattle Grace Hospital</h1>
<h2>Patient Index</h2>
<h2><%= @patient.name %></h2>

<h4>Appointments: </h4>
<ul>
  <% @patient.appointments.each do |appt| %>
  <li>
    <%= link_to appt.doctor.name, doctor_path(appt.doctor) %> - <%= appt.appointment_datetime.strftime("%B %d, %Y at %H:%M") %>
  </li>
  <% end %>
</ul>
